<div class="well">

  <div class="row">
    <div class="col-lg-6">
      <h4><%= order_item.product.title %></h4>
    </div>
    <div class="col-lg-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Prix: <span style="color: green"><%= order_item.unit_price %> â‚¬</span></h4>
        <div class="row">
          <div class="col-lg-6">
            <%= f.hidden_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-lg-4">
            <div class="btn-group">
              <%= link_to "Supprimer", order_item, { data: { confirm: "Supprimer '#{order_item.product.title}' du panier ?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
