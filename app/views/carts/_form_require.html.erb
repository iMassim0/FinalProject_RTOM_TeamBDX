<%= form_with(model: @user, url: {action: :payment}) do |f| %>
  <div class="form-group">
      <h3>Informations de livraison :</h3>
      <div class="field">
        <%= f.label "Prénom" %>
        <%= f.text_field :firstname, autocomplete: :firstname %>
      </div>

      <div class="field">
        <%= f.label "Nom" %>
        <%= f.text_field :lastname, autocomplete: :lastname %>
      </div>
      <div class="field">
        <%= f.label "Adresse" %>
        <%= f.text_field :del_address, autocomplete: :del_address, placeholder: "8 Rue des Oliviers" %>
      </div>

      <div class="field">
        <%= f.label "Code Postal" %>
        <%= f.text_field :del_zipcode, autocomplete: :del_zipcode, placeholder: "33000" %>
      </div>

      <div class="field">
        <%= f.label "Ville" %>
        <%= f.text_field :del_town, autocomplete: :del_town, placeholder: "Bordeaux" %>
      </div>
  </div>

  <div class="form-group">
      <h3>Informations de faturation :</h3>
      <div class="field">
        <%= f.label "Prénom" %>
        <%= f.text_field :fac_firstname, autocomplete: "#{@user.firstname}" %>
      </div>

      <div class="field">
        <%= f.label "Nom" %>
        <%= f.text_field :fac_lastname, autocomplete: @user.lastname %>
      </div>

      <div class="field">
        <%= f.label "Adresse" %>
        <%= f.text_field :fac_address, autocomplete: :fac_address, placeholder: "8 Rue des Oliviers" %>
      </div>

      <div class="field">
        <%= f.label "Code Postal" %>
        <%= f.text_field :fac_zipcode, autocomplete: :fac_zipcode, placeholder: "33000" %>
      </div>

      <div class="field">
        <%= f.label "Ville" %>
        <%= f.text_field :fac_town, autocomplete: :fac_town, placeholder: "Bordeaux" %>
      </div>
  </div>

  <%= f.submit "Confirmer la commande", class: "btn btn-large btn-primary" %>
<% end %>
