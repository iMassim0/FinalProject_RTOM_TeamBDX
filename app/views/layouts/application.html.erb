<!DOCTYPE html>
<html>
  <head>
    <title>FinalProjectThpTeambdxRtom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% if flash[:success] %>
        <%= flash[:success] %></p>
      <% end %>
      <% if flash[:error] %>
        <%= flash[:error] %></p>
      <% end %>
      <% flash[:error] = flash[:success] = nil %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
