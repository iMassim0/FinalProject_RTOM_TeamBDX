<div class="shop-class">
<h1>L'ATELIER</h1>
<%= link_to "Mon panier", carts_path, class: "h3 text-right", remote: true %>
<% if !@products.nil? %>
  <% @products.each do |product| %>
    <% if product.availability == 1 %>
      <div class="well">
        <div class="row">
          <div class="col-sm-8">
            <h3><%= product.title %></h3>
          </div>
          <% if user_signed_in? %>
          <div class="col-sm-4">
              <div class="pull-right">
                <%= form_for @order_item, remote: true do |f| %>
                  <%= f.hidden_field :product_id, value: product.id %>
                  <h5><%= number_to_currency(product.price, unit: 'â‚¬') %></h5>
                    <%= f.hidden_field :quantity, value: 1, min: 1 %>
                    <% if !(current_order.products.include? product) %>
                      <%= f.submit "Ajouter au panier", class:"btn btn-success" %>
                    <% end %>
                <% end %>
              <% else %>
                  <%= link_to 'Se connecter pour acheter cet article', new_user_session_path %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    <% elsif product.availability == 0 %>
    <div class="well">
      <div class="row">
        <div class="col-sm-8">
          <h3><%= product.title %></h3>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
              <p>Rupture de stock</p>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<% else %>
<h2>Pas encore de produit!</h2>
<% end %>
</div>
