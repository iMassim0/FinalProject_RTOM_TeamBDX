<h1>Product for sale</h1>
  <% @products.each do |product| %>
    <div class="well">
      <div class="row">
        <div class="col-sm-8">
          <h3><%= product.title %></h3>
        </div>
        <div class="col-sm-4">
            <div class="pull-right">
              <%= form_for(@order_item) do |f| %>
                <%= f.hidden_field :product_id, value: product.id %>
                <h5><%= number_to_currency(product.price, unit: 'â‚¬') %></h5>
                  <%= f.hidden_field :quantity, value: 1, min: 1 %>
                  <% if !(current_order.products.include? product) %>
                    <%= f.submit "Add to cart", class:"btn btn-success" %>
                <% end %>
            <% end %>
            </div>
        </div>
      </div>
    </div>
<% end %>
