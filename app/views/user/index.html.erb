<div class="index-title">
  <h1>Utilisateurs</h1>
  <%= link_to 'Gestion Produits', products_path %> |
  <%= link_to 'Gestion Commandes', admin_orders_path %> |
  <%= link_to 'Dashboard', root_path %>
</div>
<div class="index-products">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Pr√©nom</th>
        <th scope="col">Nom</th>
        <th scope="col">Email</th>
        <th scope="col">Date of creation</th>
        <th scope="col">Last date of connection</th>
        <th scope="col">Admin</th>
        <th scope="col">Changer les droits</th>
        <th scope="col">Supprimer</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.username %></th>
          <td><%= user.firstname.capitalize %></td>
          <td><%= user.lastname.upcase %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></th>
          <td><%= user.last_sign_in_at %></th>
            <% if user.is_admin %>
              <td>Oui</td>
              <td><%= link_to "Abaisser", unset_admin_path(user), method: 'patch' %></td>
            <% else %>
              <td>Non</td>
              <td><%= link_to "Promouvoir", set_admin_path(user), method: 'patch' %></td>
            <% end %>
              <td><%= link_to 'Supprimer', user_registration_path(user), :confirm => 'Are you sure you want to destroy your account?', :method => :delete %></td>
        <% end %>
    </tbody>
  </table>
</div>
