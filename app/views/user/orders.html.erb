<div class="index-title">
  <h1>Commandes</h1>
  <%= link_to 'Gestion Produits', products_path %> |
  <%= link_to 'Gestion Utilisateurs', admin_users_path %> |
  <%= link_to 'Dashboard', root_path %>
</div>
<div class="index-products">
  <table class="table">
    <thead>
      <tr style="text-align: center; vertical-align: center;">
        <th rowspan="2">ID</th>
        <th rowspan="2">Date</th>
        <th rowspan="2">Utilisteur</th>
        <th colspan="3">Contenu</th>
        <th rowspan="2">Prix total</th>
        <th rowspan="2">Statut</th>
        <th rowspan="2">Informer</th>
      </tr>
      <tr>
        <th>Produit</th>
        <th>Image</th>
        <th>Prix</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr style="text-align: center; vertical-align: center">
          <td rowspan="<%= order.products.length + 1 %>"><%= order.id %></td>
          <td rowspan="<%= order.products.length + 1 %>"><%= order.created_at.strftime("%e %B %Y Ã  %X") %></td>
          <td rowspan="<%= order.products.length + 1 %>"><%= order.user.username.capitalize! %></td>
          <td colspan="3">Produits</td>
          <td rowspan="<%= order.products.length + 1 %>"><%= order.total %></td>
          <td rowspan="<%= order.products.length + 1 %>"><%= order.status %></td>
          <td rowspan="<%= order.products.length + 1 %>"><a href="mailto:<%= order.user.email %>">eMail</a></td>
        </tr>

        <% order.products.each do |product| %>
        <tr style="text-align: center; vertical-align: center">
          <td><%= product.title  %></td>
          <td><%= image_tag "#{product.image_url}", size: "100x100" %></td>
          <td><%= product.price%></td>
        </tr>
        <% end %>


      <% end %>
    </tbody>
  </table>
</div>
